#include "lists.h"
#include <stdlib.h>

/**
 * add_dnodeint - Adds a new node at the beginning of a dlistint_t list
 * @head: Pointer to the head of the list
 * @n: Value for the new node
 * 
 * Return: Address of the new element, or NULL if it failed
 */
dlistint_t *add_dnodeint(dlistint_t **head, const int n)
{
    dlistint_t *new_node;

    /* Head pointer-inin NULL olub-olmadığını yoxla */
    if (head == NULL)
        return (NULL);

    /* Yeni node üçün yaddaş ayr */
    new_node = malloc(sizeof(dlistint_t));
    if (new_node == NULL)
        return (NULL);

    /* Yeni node-un dəyərlərini təyin et */
    new_node->n = n;
    new_node->prev = NULL;
    new_node->next = *head;

    /* Əgər siyahı boş deyilsə, köhnə head-in prev pointerını yenilə */
    if (*head != NULL)
        (*head)->prev = new_node;

    /* Head pointerını yeni node-a yönləndir */
    *head = new_node;

    return (new_node);
}
